<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userscreen" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignRight="@+id/edit_net_id"
        android:layout_toRightOf="@+id/user_name"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="Enter Password" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/net_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="32dp"
        android:text="NET ID :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_centerVertical="true"
        android:text="User Name :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888" />

    <EditText
        android:id="@+id/edit_net_id"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/net_id"
        android:layout_toRightOf="@+id/user_name"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="Enter Net Id" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/net_id"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="18dp"
        android:text="Password :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="16dp"
        android:text="Email ID :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888" />

    <EditText
        android:id="@+id/edit_email_id"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_id"
        android:layout_alignRight="@+id/edit_password"
        android:layout_toRightOf="@+id/user_name"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="Enter Email_id" />

    <EditText
        android:id="@+id/edit_phone_no"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_email_id"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/phone_no"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="Enter Phone no" />

    <TextView
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_id"
        android:layout_below="@+id/email_id"
        android:layout_marginTop="18dp"
        android:text="Phone No :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888" />

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_id"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="Enter User Name" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Registration Page :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/user_regis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_no"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/email_id"
        android:onClick="userRegister"
        android:text="Register" />

</RelativeLayout>
